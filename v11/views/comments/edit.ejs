<%- include('../partials/header'); -%>

<div class="container">

    <h1 style="text-align: center;">Edit Comment</h1>

    <div style="width: 30%; margin: 25px auto;" >
        
        <form method="post" action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" >
            
            <div class="form-group">
            <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
            </div>
            
            <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="submit" name="submit">
            </div>
           
        </form>
  
        <a href="/campgrounds">Go back</a>
    
    </div>
   
</div>


<%- include('../partials/footer'); -%>